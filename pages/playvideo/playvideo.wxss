/* pages/playvideo/playvideo.wxss */
page{
  background: #fff;
}
.container{
  position:absolute;
  top: 0;
  z-index:15;
}
.playvideo{
  width: 100%;
}
.videobtom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 92rpx;
  background: #000;
  display: flex;
  align-items: center;
  justify-content: space-around;
  z-index: 5;
  transition: all .9s;
  transform:translateY(100%);
  right: 0;
  left: 0;
}
.videobtom.slideUp{
   transform:translateY(0);
}
.videobtom .point{
  display: flex;
 padding-left: 20rpx;
}
.videobtom .point label{
  width: 10rpx;
  height: 10rpx;
  display: block;
  background: #fff;
  border-radius: 50%;
  margin-left: 10rpx;
}
.videobtom .zan{
  display: flex;
  color: #ffffff;
  font-size: 32rpx;
}
.videobtom .zan image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 14rpx;
}
.share{
  width: 34%;
}

.share button{
  background: #54b477;
  color: #fff;
  height: 52rpx;
  line-height: 53rpx;
  font-size: 26rpx;
  padding-right: 0px;
  padding-left: 0px;
  border-radius: 50rpx;
  width: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}
.share button::after{
  border:none !important;
}
.share button image{
  width:36rpx;
  height:36rpx;
  margin-right:10rpx;
}

.videInfo{
  /* padding: 30rpx; */
  background: #f5f5f5;
}
.videInfo .person{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.videInfo .person .avatar{
  display: flex;
}
.videInfo .person .avatar image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.videInfo .person .avatar .tip{
  display: flex;
  flex-direction: column;
  color: #000;
  font-size: 32rpx;
  font-weight: bold;
  align-items: center;
  justify-content: center;
  margin-left: 30rpx;
}
.videInfo .person .avatar .tip .date{
  color: #666;
  font-size: 28rpx;
  font-weight: normal;
  margin-top: 10rpx;
}
.videInfo .person .more{
  background: #ededed;
  font-size: 28rpx;
  padding: 5rpx 30rpx;
  color: #333;
  border-radius: 40rpx;
}
.videInfo .tsw{
  font-size: 34rpx;
  color: #000;
  font-weight: bold;
  margin-top: 30rpx;
}
.videInfo .sj .items{
  display: flex;
  margin-top: 30rpx;
}
.videInfo .sj .items .laber{
  color: #2b2b2b;
  font-size: 32rpx;
  display: flex;
  margin-right: 20rpx;
  align-items: center;
}
.videInfo .sj .items .laber image{
  width: 48rpx;
  height:48rpx;
}
.videInfo .sj .items .laber text{
 margin-left: 10rpx;
}
.videInfo .sj .pinglun{
  background: #f5f5f5;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 40rpx;
}
.videInfo .sj .pinglun .its{
 display: flex;
  color: #222;
  font-size: 32rpx;
  align-items: center;
}
.videInfo .sj .pinglun .its.oth{
  margin-top: 20rpx;
}
.videInfo .sj .pinglun .its .nr{
  color: #666;
  font-size: 30rpx;
}
.videInfo .sj .pinglun .more{
  margin-top: 20rpx;
  border-top: 1px solid #ddd;
  color: #49abfb;
  font-size: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 15rpx;
}
.moreVideo{
  padding: 30rpx;
}
.videInfo .tips{
  color: #999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.videInfo .tips .line{
  width: 40rpx;
  background: #999;
  height: 2rpx;
}
.videInfo .tips .tip{
  padding: 0 20rpx;
}
.videInfo .imageList{
  /* margin-top:30rpx; */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.videInfo .imageList .imgs {
  position: relative;
  margin-top: 30rpx;
}
.videInfo .imageList .imgs image{
  width: 300rpx;
  height: 200px;
  border-radius: 10rpx;
}


